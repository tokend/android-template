<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="24dp"
    android:paddingTop="8dp"
    android:paddingRight="24dp">

    <TextView
        android:id="@+id/tfa_message_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_margin">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tfa_input_text_layout"
            style="@style/EditTextLabel"
            android:labelFor="@id/tfa_input_edit_text">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tfa_input_edit_text"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/tfa_input_button_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp"
            android:padding="8dp"
            android:visibility="gone" />

    </RelativeLayout>

    <include layout="@layout/include_progress" />

</LinearLayout>