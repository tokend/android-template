<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/primary</item>
        <item name="colorPrimaryDark">@color/background</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="alertDialogStyle">@style/AlertDialogStyle</item>
        <!-- Splash background is being changed to @color/background programmatically in BaseActivity-->
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="CustomDialogTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:theme">@style/EditTextTheme</item>
        <item name="android:textColorHint">@color/edit_text_hint</item>
    </style>

    <style name="EditTextTheme">
        <item name="colorControlNormal">@color/edit_text_underline</item>
        <item name="colorControlActivated">@color/edit_text_underline</item>
        <item name="colorControlHighlight">@color/edit_text_underline</item>
    </style>

    <style name="EditTextLabel" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/EditTextLabelTheme</item>
    </style>

    <style name="EditTextLabelTheme">
        <item name="colorControlNormal">@color/edit_text_hint</item>
        <item name="colorControlActivated">@color/edit_text_hint</item>
        <item name="colorControlHighlight">@color/edit_text_hint</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorAccent">@color/primary</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="android:windowBackground">@drawable/rounded_dialog_background</item>
        <item name="android:textColor">@null</item>
        <item name="android:textSize">@null</item>
        <item name="android:windowMinWidthMajor">65%</item>
        <item name="android:windowMinWidthMinor">85%</item>
    </style>
</resources>